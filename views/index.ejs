<!doctype html>
<html lang="fr">
  <head>
        <%- include('./head'); %>
  </head>
  
  <body>
      
    <div class="container-md">
      <header class="bg-dark mb-5 p-1">
        <h2 class="mt-5">Yolar Plexus</h2>
        <h3 class="mb-5"><i class="fas fa-spa"></i>Chakra Solutions<i class="fas fa-spa"></i></h3>
      </header>
      
      <div class="row align-items-center mt-5 mr-5">
            <div class="col-sm-5">      
              <img id="home_logo" src="/img/yoda.svg" alt="Logo Yoda"/>
            </div>
             
            <div class="col-sm-7">
              <form method="POST" action="/api/connexion">
                  <div class="mb-3">
                      <label for="login" class="form-label">Identifiant</label>
                      <input type="text" name="login" id="login" class="form-control"/>
                  </div>
                  
                  <div class="mb-3">
                      <label for="password" class="form-label">Mot de passe</label>
                      <input type="password" name="password" id="password" class="form-control"/>
                      <%if (error == 'connexion') { %><div id="wrongPassword" style="color:#86A77A;">Mauvais mot de passe ! Essaie encore ...</div> <% } %>
                  </div>
                  <input type="submit" class="btn btn-dark btn-lg mt-3" value="Connexion" id="submit"/>
            </div>
            </form>
      
            
 
      </div>
      
    </div>
    
    <!-- Script Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    <!-- Script pour utiliser Axios -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    
    
    
  </body>
</html>
