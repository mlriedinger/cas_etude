<!doctype html>
<html lang="fr">
  <head>
        <%- include('./head'); %>
  </head>
  
  <body>
      
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
          <a class="navbar-brand" href="#"><img src="/img/yoda.svg" alt="Logo Yoda" id="logo"/></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
              <a class="p-3 nav-link active" aria-current="page" href="#monitoring">Monitoring</a>
              <a class="p-3 nav-link" href="#manage">Gestion</a>
              <a class="p-3 nav-link" href="/">Déconnexion</a>
            </div>
          </div>
        </div>
      </nav>
        
        <h1 class="text-center" id="monitoring">Monitoring de la production solaire</h1>
        
        <!-- div pour afficher le graphique de production totale -->
        <div class="row" id="main" style="width:100%;height:600px;"></div>
        <div class="d-flex justify-content-center">
          <img id="yoda_dark" id="manage" src="/img/yoda_dark.png" alt="Le côté obscur de Yoda"/>
        </div>
        <h2 class="mb-5 mt-5 text-center" >Gestion des installations</h2>
          
        <!-- div pour afficher les boutons de commande de chaque panneau -->
        <div class="row mt-5" id="groupButtons"></div>     
        
        <!-- Fenetre Modale pour afficher le graphique de production par panneau -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header bg-dark text-light">
                <h5 class="modal-title" id="exampleModalLabel">Production</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body" id="panelProductionChart" style="width:100%;height:600px;"></div>
            </div>
          </div>
        </div>
        
    </div>
    
    <!-- Script Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    <!-- Script pour utiliser Axios -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <!-- Script pour utiliser ECharts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/echarts/5.0.0/echarts.min.js"></script>
    
	<script src="/main.js"></script>
    
  </body>
</html>
